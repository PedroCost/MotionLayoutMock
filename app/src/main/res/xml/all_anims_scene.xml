<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!-- First Animation - Rail peaking -->
    <Transition
        motion:constraintSetEnd="@+id/endAnimRailPeak"
        motion:constraintSetStart="@+id/startAnimRailPeak" />

    <ConstraintSet android:id="@+id/startAnimRailPeak">
        <Constraint
            android:id="@+id/binge_widget_title"
            style="@style/MotionLayout.binge_widget_title"
            android:layout_marginEnd="-100dp"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/binge_watch_rail"
            style="@style/MotionLayout.binge_widget_rail"
            android:layout_marginEnd="-900dp" />
        <Constraint
            android:id="@+id/binge_cancel_button"
            style="@style/MotionLayout.binge_widget_cancel_button"
            android:layout_marginEnd="-200dp"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endAnimRailPeak">
        <Constraint
            android:id="@+id/binge_widget_title"
            style="@style/MotionLayout.binge_widget_title"
            motion:layout_constraintLeft_toLeftOf="@+id/binge_watch_rail" />
        <Constraint
            android:id="@+id/binge_watch_rail"
            style="@style/MotionLayout.binge_widget_rail"
            android:layout_marginEnd="-400dp" />
        <Constraint
            android:id="@+id/binge_cancel_button"
            style="@style/MotionLayout.binge_widget_cancel_button"
            motion:layout_constraintLeft_toLeftOf="@+id/binge_watch_rail" />
    </ConstraintSet>

    <!-- Second Animation - Show full rail -->
    <Transition
        motion:constraintSetEnd="@+id/endAnimRailPeak"
        motion:constraintSetStart="@+id/endAnimShowFullRail" />

    <ConstraintSet android:id="@+id/endAnimShowFullRail">
        <Constraint
            android:id="@+id/binge_widget_title"
            style="@style/MotionLayout.binge_widget_title"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/binge_watch_rail"
            style="@style/MotionLayout.binge_widget_rail"
            />
        <Constraint
            android:id="@+id/binge_cancel_button"
            style="@style/MotionLayout.binge_widget_cancel_button"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

</MotionScene>