<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MotionLayoutMock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="rvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="buttonCancel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_padding</item>
        <item name="android:text">Cancel</item>
    </style>

    <style name="tvAnimTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Watch Next</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="tvAnimTitleAll">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginBottom">@dimen/medium_padding</item>
        <item name="layout_constraintBottom_toTopOf">@+id/rvMotionAll</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">Watch Next</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="rvStyleAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/big_padding</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="buttonCancelAll">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="layout_constraintTop_toBottomOf">@+id/rvMotionAll</item>
        <item name="android:text">Cancel</item>
    </style>





    <style name="itemStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

</resources>